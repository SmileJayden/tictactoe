{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": { "@src/*": ["./src/*"] }
  },
  "include": ["index.ts", "src"],
  "exclude": ["node_modules"]
}
